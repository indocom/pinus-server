{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [ "node_modules/*" ],
      "@handlers": [ "src/handlers" ],
      "@handlers/*": [ "src/handlers/*" ],
      "@services": [ "src/services" ],
      "@services/*": [ "src/services/*" ],
      "@db": [ "src/db" ],
      "@db/*": [ "src/db/*" ],
      "@fb": [ "src/firebase" ],
      "@fb/*": [ "src/firebase/*" ],
      "@utils": [ "src/utils" ]
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}