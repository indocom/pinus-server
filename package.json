{
  "name": "pinus-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "start:dev": "nodemon src/app.ts",
    "firebase:dev": "firebase emulators:start",
    "lint": "eslint src/**/*.ts --quiet --fix",
    "db:setup": "yarn db:create && yarn db:migrate && yarn db:seed",
    "db:create": "sequelize db:create",
    "db:drop": "sequelize db:drop",
    "db:migrate": "sequelize db:migrate",
    "db:rollback": "sequelize db:migrate:undo",
    "db:reset": "sequelize db:migrate:undo:all",
    "db:seed": "sequelize db:seed:all",
    "db:clear": "sequelize db:seed:undo:all",
    "migration:generate": "sequelize migration:generate",
    "model:generate": "sequelize model:generate --underscored",
    "seed:generate": "sequelize seed:generate"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^8.2.5",
    "firebase-admin": "^9.4.2",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.4.0",
    "sequelize-cli": "^6.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.20",
    "@types/sequelize": "^4.28.9",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "swagger-jsdoc": "^6.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
